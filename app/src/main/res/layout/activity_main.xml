<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score">

        <ImageView
            android:id="@+id/imgOne"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="clickHamster"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/hamster"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp" />

        <ImageView
            android:id="@+id/imgTwo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="clickHamster"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/hamster"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp" />

        <ImageView
            android:id="@+id/imgThree"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="clickHamster"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/hamster"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp" />

        <ImageView
            android:id="@+id/imgFour"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="clickHamster"
            app:layout_column="0"
            app:layout_row="3"
            app:srcCompat="@drawable/hamster"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp" />

        <ImageView
            android:id="@+id/imgFive"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="clickHamster"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/hamster" />

        <ImageView
            android:id="@+id/imgSix"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="clickHamster"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/hamster"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp" />

        <ImageView
            android:id="@+id/imgSeven"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="clickHamster"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/hamster"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp" />


        <ImageView
            android:id="@+id/imgEight"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="clickHamster"
            app:layout_column="1"
            app:layout_row="3"
            app:srcCompat="@drawable/hamster"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp" />

        <ImageView
            android:id="@+id/imgNine"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="clickHamster"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/hamster"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp" />


        <ImageView
            android:id="@+id/imgTen"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="clickHamster"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/hamster"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp" />

        <ImageView
            android:id="@+id/imgEleven"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="clickHamster"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/hamster"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp" />

        <ImageView
            android:id="@+id/imgTwelve"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="clickHamster"
            app:layout_column="2"
            app:layout_row="3"
            app:srcCompat="@drawable/hamster"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp" />


    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:text="Time:"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:text="Score:"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time" />

    <Button
        android:id="@+id/quit"
        android:layout_width="154dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Quit"
        android:onClick="eventQuit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <Button
        android:id="@+id/start"
        android:layout_width="154dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="Start"
        android:onClick="eventStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>